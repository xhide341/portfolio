---
import BentoCard from "../bento-card.astro";
import HistoryIcon from "../icons/history-icon.tsx";
---

<BentoCard size="w-full h-full" role="region" aria-labelledby="about-me-title">
  <div class="p-4">
    <h2
      id="about-me-title"
      class="flex text-lg font-bold items-center gap-1 tracking-wide"
    >
      <HistoryIcon />
      Education History
    </h2>
    <div class="relative ml-2 space-y-6 mt-4">
      <!-- Vertical Line -->
      <div
        class="absolute left-1.5 top-1.5 h-[calc(100%-.5rem)] w-px bg-gray-300"
      >
      </div>
      <!-- Checkpoint 3 -->
      <div class="relative pl-6">
        <div
          class="absolute left-0 top-1.5 w-3 h-3 rounded-full border-1 border-black bg-white"
        >
        </div>
        <div class="space-y-1">
          <h3 class="text-sm font-semibold">
            Bachelor of Science in Information Technology
          </h3>
          <p class="text-xs text-gray-600">
            La Consolacion University Philippines
            <span class="block text-xs text-gray-600 mt-1">2020-2024</span>
          </p>
        </div>
      </div>
      <!-- Checkpoint 2 -->
      <div class="relative pl-6">
        <div
          class="absolute left-0 top-1.5 w-3 h-3 rounded-full border-1 border-black bg-white"
        >
        </div>
        <div class="space-y-1">
          <h3 class="text-sm font-semibold">High School Diploma</h3>
          <p class="text-xs text-gray-600">
            Colegio de Calumpit Institute
            <span class="block text-xs text-gray-600 mt-1">2014-2020</span>
          </p>
        </div>
      </div>
      <!-- Checkpoint 1 -->
      <div class="relative pl-6">
        <div
          class="absolute left-0 top-1.5 w-3 h-3 rounded-full border-1 border-black bg-white"
        >
        </div>
        <div class="space-y-1">
          <h3 class="text-sm font-semibold">Elementary School</h3>
          <p class="text-xs text-gray-600">
            Pungo Elementary School
            <span class="block text-xs text-gray-600 mt-1">2008-2014</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</BentoCard>
