---
import Profile from "../magic-cards/profile.astro";
import Availability from "../magic-cards/availability.astro";
import AboutMe from "../magic-cards/about-me.astro";
import Education from "../magic-cards/education.astro";
import Technologies from "../magic-cards/technologies.astro";
import Services from "../magic-cards/services.astro";
import HireMe from "../magic-cards/hire-me.astro";
import Location from "../magic-cards/location.astro";
import Projects from "../magic-cards/projects.astro";
---

<div>
  <div class="grid grid-cols-4 md:grid-cols-10 gap-2 h-full">
    <div class="col-span-4 md:col-span-3 md:row-start-1 md:row-end-3">
      <Profile />
    </div>
    <div class="col-span-4 md:col-span-3 md:row-start-3 md:row-end-5">
      <Services />
    </div>
    <div class="col-span-4 md:col-span-4 md:row-start-1 md:row-end-2">
      <Availability />
    </div>
    <div class="col-span-4 md:col-span-4 md:row-start-2 md:row-end-5">
      <AboutMe />
    </div>
    <div class="col-span-4 md:col-span-3 md:row-start-1 md:row-end-4">
      <Education />
    </div>
    <div class="col-span-4 md:col-span-4 md:row-start-5 md:row-end-8">
      <Technologies />
    </div>
    <div class="col-span-4 md:col-span-3 md:row-start-5 md:row-end-8">
      <Location />
    </div>
    <div class="col-span-4 md:col-start-8 md:col-end-11 md:row-start-4 md:row-end-8">
      <HireMe />
    </div>
    <div class="col-span-4 md:col-span-10">
      <Projects />
    </div>
  </div>
</div>
