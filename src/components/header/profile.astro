---
import { EnvelopeIcon, MapPinIcon } from "@heroicons/react/20/solid";
import profile from "../../images/crucified-kid.jpg";
import { Image } from "astro:assets";
---

<div class="flex w-full p-0 justify-between">
  <div class="flex gap-4">
    <Image
      src={profile}
      alt="profile"
      class="w-25 h-25 md:w-30 md:h-30 object-cover rounded-md"
      loading="eager"
    />
    <div class="flex flex-col text-start text-black gap-1 justify-around">
      <h4 class="text-base md:text-2xl font-bold">Shawne</h4>
      <h3 class="text-xs md:text-sm text-gray-800">Web/Mobile Developer</h3>
      <div class="flex flex-col gap-1 text-gray-900">
        <p class="text-xs md:text-sm flex items-center gap-1">
          <EnvelopeIcon className="w-4 h-4" /> shawnehgn10@gmail.com
        </p>
        <p class="text-xs md:text-sm flex items-center gap-1">
          <MapPinIcon className="w-4 h-4" /> Bulacan, Philippines
        </p>
      </div>
    </div>
  </div>
  <div class="p-4 hidden md:block">
    <p class="text-xs text-black/90 bg-gray-200 rounded-sm p-2">
      Last updated: 2025-02-15
    </p>
  </div>
</div>
