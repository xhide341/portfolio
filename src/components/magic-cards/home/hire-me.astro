---
import MagicCardLayout from "src/layouts/magic-card-layout";
import DeployedCodeIcon from "src/icons/deployed-code-icon.tsx";
---

<MagicCardLayout initial={{ opacity: 0, y: -20 }} className="size-full" client:load>
  <div class="p-4 size-full flex flex-col">
    <h2
      id="hire-me-title"
      class="flex text-base md:text-lg font-bold items-center gap-1"
    >
      <DeployedCodeIcon aria-hidden="true" />
      Hire Me
    </h2>
    <div
      class="text-xs lg:text-sm text-black-500 text-justify leading-relaxed p-1"
    >
      <p class="py-1">
        I prioritize building simple yet elegant web applications that offer
        seamless user experiences. My commitment to quality is reflected in my
        dedication to achieving:
      </p>
      <ul
        class="text-start text-xs lg:text-sm gap-2 list-none list-inside"
        role="list"
        aria-label="Performance metrics"
      >
        <li 
          role="listitem" 
          class="py-1 lg:py-2"
          aria-label="Performance score: 90 plus"
        >
          <span aria-hidden="true">✨</span> 90+ in Performance
        </li>
        <li 
          role="listitem" 
          class="py-1 lg:py-2"
          aria-label="Accessibility score: 90 plus"
        >
          <span aria-hidden="true">✨</span> 90+ in Accessibility
        </li>
        <li 
          role="listitem" 
          class="py-1 lg:py-2"
          aria-label="Best Practices score: 100"
        >
          <span aria-hidden="true">✨</span> 100 in Best Practices
        </li>
        <li 
          role="listitem" 
          class="py-1 lg:py-2"
          aria-label="SEO score: 100"
        >
          <span aria-hidden="true">✨</span> 100 in SEO Optimization
        </li>
      </ul>
    </div>
  </div>
</MagicCardLayout>