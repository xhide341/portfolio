---
import { motion } from "motion/react";
import { EnvelopeIcon, MapPinIcon } from "@heroicons/react/20/solid";
import profile from "../../images/resume-photo.webp";
import { Image } from "astro:assets";
import { MagicCard } from "../react/magic-card.tsx";
---

<motion.div
  animate={{ opacity: 1, y: 0 }}
  initial={{ opacity: 0, y: -20 }}
  transition={{ duration: 0.5 }}
  client:load
  className="size-full"
>
  <MagicCard
    className="size-full"
    backgroundPattern="cloud-pattern"
    client:load
  >
    <div class="size-full p-4" role="article" aria-label="Profile Card">
      <div class="flex flex-col mx-auto">
        <div class="flex flex-col items-center justify-center text-center text-black-500">
          <Image
            src={profile}
            alt="profile"
            width={100}
            height={100}
            class="w-20 h-20 md:w-25 md:h-25 lg:w-30 lg:h-30 border-1 border-gray-300 object-cover rounded-full mb-2"
            loading="eager"
          />
          <div class="flex flex-col">
            <h3 class="text-base md:text-lg font-bold" id="profile-name">Shawne Gimena</h3>
            <h4 class="text-foreground font-semibold mb-2" id="profile-title">
              Web Developer
            </h4>
            <div class="flex flex-col gap-1 text-foreground justify-center items-center text-center" aria-label="Contact Information">
              <p class="flex text-xs items-center gap-1">
                <MapPinIcon className="w-4 h-4" aria-hidden="true" role="presentation" />
                <span>Manila, Philippines</span>
              </p>
              <p class="flex text-xs items-center gap-1">
                <EnvelopeIcon className="w-4 h-4" aria-hidden="true" role="presentation" />
                <a 
                  href="mailto:shawnehgn10@gmail.com"
                  aria-label="Send email to Shawne Gimena"
                  class="hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary rounded"
                >
                  shawnehgn10@gmail.com
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </MagicCard>
</motion.div>
