---
import { MagicCard } from "../react/magic-card.tsx";
import DeployedCodeIcon from "../../icons/deployed-code-icon.tsx";
import { GlobeAsiaAustraliaIcon } from "@heroicons/react/24/outline";
import GithubIcon from "../../icons/socials/github-icon.tsx";
import NextJsIcon from "../../icons/technologies/nextjs-icon.tsx";
import ReactIcon from "../../icons/technologies/react-icon.tsx";
import PrismaIcon from "../../icons/technologies/prisma-icon.tsx";
import NextAuthIcon from "../../icons/technologies/next-auth-icon.tsx";
import PostgreSQLIcon from "../../icons/technologies/postgresql-icon.tsx";
import LangchainIcon from "../../icons/technologies/langchain-icon.tsx";
import LaravelIcon from "../../icons/technologies/laravel-icon.tsx";
import LivewireIcon from "../../icons/technologies/livewire-icon.tsx";
import AlpineJsIcon from "../../icons/technologies/alpinejs-icon.tsx";
import FrankenphpIcon from "../../icons/technologies/frankenphp-icon.tsx";
import { Image } from "astro:assets";
import AstraAiLogo from "../../images/astra-ai-logo.jpg";
import LcupLogo from "../../images/LCUP-logo.png";
import { motion } from "motion/react";
---

<motion.div
  animate={{ opacity: 1, y: 0 }}
  initial={{ opacity: 0, y: -20 }}
  transition={{ duration: 0.5 }}
  client:visible
  className="size-full"
>
  <MagicCard className="size-full" client:load>
    <div class="p-4 size-full flex flex-col">
      <h2
        id="projects-title"
        class="flex text-base md:text-lg font-bold items-center gap-1 tracking-wide"
        aria-label="Projects"
      >
        <DeployedCodeIcon aria-hidden="true" />
        Projects
      </h2>
      <p class="text-xs text-wrap text-gray-500 dark:text-gray-400 p-0 ml-1 md:ml-2">
        Note: None of these projects are cloned.
      </p>
      <hr class="my-2 text-gray-300" />
      <div class="flex flex-col gap-2 w-full flex-grow">
        <!-- Top section: Logo + Title and Links -->
        <div class="flex justify-between w-full">
          <div class="flex items-center gap-2">
            <Image
              src={AstraAiLogo}
              alt="ASTRA AI"
              class="w-20 h-20 rounded-sm"
              loading="eager"
            />
            <h3 class="text-sm font-medium text-black-500 m-0">
              ASTRA AI
            </h3>
          </div>
          <div class="flex gap-1 items-center">
            <a
              href="https://astra-ai-iota.vercel.app"
              target="_blank"
              class="inline-flex"
              aria-label="Visit ASTRA AI website"
            >
              <GlobeAsiaAustraliaIcon className="w-5 h-5" />
            </a>
            <a
              href="https://github.com/xhide341/astra-ai"
              target="_blank"
              class="inline-flex"
              aria-label="View ASTRA AI on GitHub"
            >
              <GithubIcon aria-hidden="true" />
            </a>
          </div>
        </div>
        <!-- Bottom section: Tech stack -->
        <div class="flex flex-wrap gap-1 items-center w-full justify-end">
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <NextJsIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">NextJS</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <ReactIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">React</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <PrismaIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">Prisma</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <NextAuthIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">NextAuth</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <PostgreSQLIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">PostgreSQL</p>
          </div>
        </div>
      </div>
      <hr class="my-2 text-gray-300" />
      <div class="flex flex-col gap-2 w-full flex-grow">
        <!-- Top section: Logo + Title and Links -->
        <div class="flex justify-between w-full">
          <div class="flex items-center gap-2">
            <div class="flex items-center rounded-sm bg-black h-20 w-20 justify-center">
              <Image
                src={LcupLogo}
                alt="Event Sphere"
                class="w-auto h-10"
                loading="lazy"
              />
            </div>
            <h3 class="text-sm font-medium text-black-500 m-0">Event Sphere</h3>
          </div>
          <div class="flex gap-1 items-center">
            <a
              href="https://github.com/xhide341/eventsphere"
              target="_blank"
              class="inline-flex"
              aria-label="View Event Sphere on GitHub"
            >
              <GithubIcon aria-hidden="true"/>
            </a>
          </div>
        </div>
        <!-- Bottom section: Tech stack -->
        <div class="flex flex-wrap gap-1 items-center w-full justify-end">
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <LaravelIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">Laravel</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <LivewireIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">Livewire</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <AlpineJsIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">AlpineJS</p>
          </div>
          <div
            class="flex items-center gap-1 border border-gray-300 py-1 px-2 rounded-full"
          >
            <FrankenphpIcon className="w-4 h-4" aria-hidden="true" />
            <p class="text-xs">FrankenPHP</p>
          </div>
        </div>
      </div>
      <hr class="my-2 text-gray-300" />
      <div class="flex items-center justify-center gap-2 mt-2">
        <p class="text-xs text-gray-500 dark:text-gray-400">More cool projects on the way</p>
        <span class="text-yellow-500"> ⚠️ </span>
      </div>
    </div>
  </MagicCard>
</motion.div>
