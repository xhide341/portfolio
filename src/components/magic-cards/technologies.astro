---
import { MagicCard } from "../react/magic-card.tsx";
import CodeBlockIcon from "../../icons/code-block-icon.tsx";
import { motion } from "motion/react";
---

<motion.div
  animate={{ opacity: 1, x: 0 }}
  initial={{ opacity: 0, x: -20 }}
  transition={{ duration: 0.5 }}
  className="w-full h-full"
  client:load
>
  <MagicCard className="w-full h-full" client:load>
    <div class="p-4">
      <h2
        id="technologies-title"
        class="flex text-base md:text-lg font-bold items-center gap-1 tracking-wide mb-2"
        aria-label="Technology Stack"
      >
        <CodeBlockIcon aria-hidden="true" />
        Tech Stack
      </h2>
      <div
        class="flex flex-col gap-2 text-xs font-medium p-2 relative animate-fade-in"
        role="list"
      >
        <div class="flex flex-row gap-2 relative z-10" role="listitem">
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="NextJS"
            role="presentation"
          >
            NextJS
          </p>
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Laravel"
            role="presentation"
          >
            Laravel
          </p>
        </div>
        <div class="flex flex-row gap-2 relative z-10" role="listitem">
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Typescript"
            role="presentation"
          >
            Typescript
          </p>
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Livewire"
            role="presentation"
          >
            Livewire
          </p>
        </div>
        <div class="flex flex-row gap-2 relative z-10" role="listitem">
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Astro"
            role="presentation"
          >
            Astro
          </p>
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Android Studio"
            role="presentation"
          >
            Android Studio
          </p>
        </div>
        <div class="flex flex-row gap-2 relative z-10" role="listitem">
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="React"
            role="presentation"
          >
            React
          </p>
          <p
            class="w-1/2 text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform"
            aria-label="Tailwind"
            role="presentation"
          >
            Tailwind
          </p>
        </div>
        <p
          class="w-full text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform relative z-10"
          aria-label="Langchain"
          role="presentation"
        >
          Langchain
        </p>
        <p
          class="w-full text-center border rounded-full border-gray-300 p-1.5 bg-white hover:scale-105 transition-transform relative z-10"
          aria-label="Docker"
          role="presentation"
        >
          Docker
        </p>
      </div>
    </div>
  </MagicCard>
</motion.div>
