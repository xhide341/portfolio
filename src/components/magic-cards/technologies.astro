---
import { MagicCard } from "../react/magic-card.tsx";
import CodeBlockIcon from "../../icons/code-block-icon.tsx";
import { motion } from "motion/react";
import NextJsIcon from "../../icons/nextjs-icon.tsx";
import ReactIcon from "../../icons/react-icon.tsx";
import TypescriptIcon from "../../icons/typescript-icon.tsx";

const technologies = [
  { 
    name: "Next.js", 
    Icon: NextJsIcon
  },
  // { 
  //   name: "React", 
  //   Icon: ReactIcon
  // },
  // {
  //   name: "Typescript",
  //   Icon: TypescriptIcon,
  // },
  // { name: "Tailwind", Icon: TailwindIcon },
];
---


<motion.div
  animate={{ opacity: 1, x: 0 }}
  initial={{ opacity: 0, x: -20 }}
  transition={{ duration: 0.5 }}
  className="w-full h-full"
  client:load
>
  <MagicCard className="w-full h-full" client:load>
    <div class="p-4">
      <h2
        id="technologies-title"
        class="flex text-base md:text-lg font-bold items-center gap-1 tracking-wide mb-2"
        aria-label="Technology Stack"
      >
        <CodeBlockIcon aria-hidden="true" />
        Tech Stack
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-2" role="list">
        {technologies.map((technology) => {
          const Icon = technology.Icon;
          return (
            <div class="flex flex-col items-center justify-center p-3 bg-gray-50 dark:bg-[#1E2330] rounded-lg transition-all hover:scale-105 hover:bg-gray-100 dark:hover:bg-[#252B3B] group" role="listitem">
              <div class="mb-2 text-gray-600 dark:text-gray-400 group-hover:text-[#000000] dark:group-hover:text-white transition-colors">
                <Icon width={32} height={32} />
              </div>
              <span class="text-xs font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white transition-colors">
                {technology.name}
              </span>
            </div>
          );
        })}
      </div>
    </div>
  </MagicCard>
</motion.div>
