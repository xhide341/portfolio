---
import { MagicCard } from "../react/magic-card.tsx";
import { motion } from "motion/react";
import "swiper/css";
import "swiper/css/pagination";
---

<motion.div
  animate={{ opacity: 1, x: 0 }}
  initial={{ opacity: 0, x: 20 }}
  transition={{ duration: 0.5 }}
  className="w-full h-full"
  client:load
>
  <MagicCard className="w-full h-full" client:load>
    <div class="p-4 w-full h-full">
      <!-- Swiper container -->
      <div class="swiper achievements-swiper">
        <div class="swiper-wrapper text-center">
          <div class="swiper-slide" aria-label="Lines of Code">
            <div
              class="p-4 text-center flex flex-col justify-center items-center h-full"
            >
              <span class="text-3xl font-bold text-primary mb-2">2K+</span>
              <h3 class="text-lg font-semibold">Lines of Code</h3>
            </div>
          </div>
          <div class="swiper-slide" aria-label="Major Projects">
            <div
              class="p-4 text-center flex flex-col justify-center items-center h-full"
            >
              <span class="text-3xl font-bold text-primary mb-2">3+</span>
              <h3 class="text-lg font-semibold">Major Projects</h3>
            </div>
          </div>
          <div class="swiper-slide" aria-label="GitHub Contributions">
            <div
              class="p-4 text-center flex flex-col justify-center items-center h-full"
            >
              <span class="text-3xl font-bold text-primary mb-2">500+</span>
              <h3 class="text-lg font-semibold">GitHub Contributions</h3>
            </div>
          </div>
          <div class="swiper-slide" aria-label="Technologies">
            <div
              class="p-4 text-center flex flex-col justify-center items-center h-full"
            >
              <span class="text-3xl font-bold text-primary mb-2">10+</span>
              <h3 class="text-lg font-semibold">Technologies</h3>
            </div>
          </div>
          <div class="swiper-slide" aria-label="Code Reviews">
            <div
              class="p-4 text-center flex flex-col justify-center items-center h-full"
            >
              <span class="text-3xl font-bold text-primary mb-2">100+</span>
              <h3 class="text-lg font-semibold">Code Reviews</h3>
            </div>
          </div>
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </MagicCard>
</motion.div>

<script>
  import Swiper from "swiper";
  import { Pagination, Autoplay } from "swiper/modules";

  new Swiper(".achievements-swiper", {
    modules: [Pagination, Autoplay],
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    spaceBetween: 20,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
  });
</script>

<style>
  .text-primary {
    color: #4f46e5; /* Indigo-600, you can adjust this color to match your theme */
  }

  .swiper-slide {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    height: auto;
    min-height: 150px;
  }
</style>
